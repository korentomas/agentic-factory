{
  "_comment": "AgentFactory risk policy — tuned for this repository.",
  "version": "1",
  "riskTierRules": {
    "high": [
      "apps/orchestrator/routers/clickup.py",
      "apps/orchestrator/routers/callbacks.py",
      ".claude/hooks/**",
      ".github/workflows/**",
      "scripts/risk_policy_gate.py"
    ],
    "medium": [
      "apps/orchestrator/models.py",
      "apps/orchestrator/main.py",
      "apps/orchestrator/jobs/**"
    ],
    "low": [
      "docs/**",
      "*.md",
      "**/*.md",
      "tests/**",
      ".env.example",
      "*.txt",
      "LICENSE"
    ]
  },
  "mergePolicy": {
    "high": {
      "requiredChecks": ["risk-policy-gate", "tests", "claude-review", "spec-audit"],
      "humanApprovalRequired": true,
      "description": "Webhook handlers, workflows, hooks, gate script — always require full review"
    },
    "medium": {
      "requiredChecks": ["risk-policy-gate", "tests", "claude-review"],
      "humanApprovalRequired": true,
      "description": "Core models, main app, jobs — require tests + review"
    },
    "low": {
      "requiredChecks": ["risk-policy-gate"],
      "humanApprovalRequired": false,
      "description": "Docs, tests, config — gate only"
    }
  },
  "blockedPatterns": []
}
